            <p class="mg-b-20 mg-sm-b-30">Edit</p>
            <form class="form-horizontal" action="@Url.Action("ApprovalTypeCreate", "RfqApprovalConfig")" method="post">
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.ApprovalTypeId)

                <br />
                <div class="col-md-6" style="margin-top:0px">
                    <div class="row mg-t-20">
                        <div class="col-md-6" style="margin-top:10px">
                            <label for="EvaluationPeriod">Evaluation Period:</label>
                            @Html.EditorFor(model => model.ApprovalTypeName, new { htmlAttributes = new { id = "ApprovalTypeName", @class = "form-control", @type = "text", required = "required", style = "width:450px; height:40px" } })
                            @Html.ValidationMessageFor(model => model.ApprovalTypeName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <br />

                </div>
