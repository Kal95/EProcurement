@model IEnumerable<E_Procurement.Repository.VendoRepo.VendorModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Vendor";
    ViewBag.FavIcon = "fa fa-street-view";
    ViewBag.PageDesc = "Manage Vendor";
}

<div class="main-card mb-3 card">

    <div class="card-body">
        <a class="btn btn-primary" pull-right" href="@Url.Action("Create", "Vendor")"><i class="fa fa-plus"> </i>  Add Vendor</a>
        <br />
        <hr />
        <br />
        <table style="width: 100%;" id="example" class="table table-hover table-striped table-bordered">
            <thead>
                <tr>
                    <th>S/N</th>
                    <th>Vendor Name </th>
                    <th>Address</th>
                    <th>Website </th>
                    @*<th>VAT No. </th>
                    <th>TIN No. </th>
                    <th>AAT Amount </th>
                    <th>AAT Currency </th>
                    <th>Account Name </th>
                    <th>Account Number </th>
                    <th>Branch </th>
                    <th>CAC Number </th>*@
                    <th>Contact Name </th>
                    <th>Phone Number </th>
                    @*<th>Sort Code </th>*@
                    <th>Email </th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>

                @{int rowNo = 0;}
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@(rowNo += 1)</td>
                        <td>@item.VendorName</td>
                        <td>@item.VendorAddress</td>
                        <td>@item.WebsiteAddress</td>
                       
                        @*<td>@item.VatNo</td>
                        <td>@item.TinNo</td>
                        <td>@item.AatAmount</td>
                        <td>@item.AatCurrency</td>
                        <td>@item.AccountName</td>
                        <td>@item.AccountNo</td>
                        <td>@item.BankBranch</td>
                        <td>@item.CacNo</td>*@
                        <td>@item.ContactName</td>
                        <td>@item.PhoneNumber</td>
                        @*<td>@item.SortCode</td>*@
                        <td>@item.Email</td>

                        <td>
                            @if (item.IsActive)
                            {
                                <label class="text-success">Active</label>
                            }
                            else
                            {
                                <label class="text-danger">Inactive</label>

                            }
                        </td>
                        <td><a class="mb-2 mr-2 btn-icon btn-shadow btn-outline-2x btn btn-outline-alternate" href="@Url.Action("Edit", "Vendor",  new { VendorId = item.Id })"><span class="glyphicon btn-glyphicon glyphicon-edit img-circle text-success"></span><i class="pe-7s-edit btn-icon-wrapper"></i> Edit</a></td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>
