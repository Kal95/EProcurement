                        }
                        @if (item.TaxFilePath != null)
                        {
                            <td><img src="~/Uploads/VendorDocuments/@item.TaxFilePath" height="100" width="100" /></td>
                        }
                        else
                        {
                            <td height="100" width="100"></td>
                        }
