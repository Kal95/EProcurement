@model IEnumerable<E_Procurement.Repository.VendoRepo.VendorModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Vendor";
    ViewBag.FavIcon = "fa fa-street-view";
