                        }
                        @if (item.BankRefFilePath != null)
                        {
                            <td><img src="~/Uploads/VendorDocuments/@item.BankRefFilePath" height="100" width="100" /></td>
                        }
                        else
                        {
                            <td height="100" width="100"></td>
                        }
                        @if (item.COVFilePath != null)
                        {
                            <td><img src="~/Uploads/VendorDocuments/@item.COVFilePath" height="100" width="100" /></td>
                        }
                        else
                        {
                            <td height="100" width="100"></td>
                        }
                        @if (item.RefFilePath != null)
                        {
                            <td><img src="~/Uploads/VendorDocuments/@item.RefFilePath" height="100" width="100" /></td>
                        }
