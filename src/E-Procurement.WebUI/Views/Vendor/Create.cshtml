@model E_Procurement.Repository.VendoRepo.VendorModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Vendors";
    ViewBag.PageDesc = "Create Vendor";
    ViewBag.FavIcon = "fa fa-street-view";
}

<!-- page section -->
<div class="container-fluid">
    <div class="row">
        <!-- basic forms -->
        <!-- forms cntrol -->
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">

                <div class="card-content">
                    <form class="form-horizontal" action="@Url.Action("Create","Vendor")" method="post">
                        @Html.AntiForgeryToken()
                        @*<h2 class="text-center">Basic forms Example</h2>*@
                        <br />
                        <fieldset>
                            <!-- Text input-->
                            <div class="form-group">
                                <label class="col-md-4 control-label">Vendor Name <span class="text-danger">*</span></label>
                                <div class="col-md-6">
                                    <div class="input-field">
                                        @Html.EditorFor(model => model.VendorName, new { htmlAttributes = new { id = "VendorName", @class = "form-control", @type = "text", required = "required" } })
                                        @Html.ValidationMessageFor(model => model.VendorName, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-4 control-label">Category <span class="text-danger">*</span></label>
                                <div class="col-md-6" style="margin-top:10px">
                                    @foreach (var category in Model.VendorCategoryList)
                                    {
                                        <input type="checkbox" @Model.VendorCategoryList value="@category.Value" checked="checked" name="SelectedVendorCategories" id="@category.Value" />
                                        <label for="@category.Text">@category.Text</label>
                                        <input type="hidden" id="@category.Value" />
                                        <br />
                                    }
                                </div>
                            </div>
                           
                            <!-- ./Text input-->
                            <div class="form-group">
                                <label class="col-md-4 control-label">Address <span class="text-danger">*</span></label>
                                <div class="col-md-6">
                                    <div class="input-field">
                                        @Html.EditorFor(model => model.VendorAddress, new { htmlAttributes = new { id = "VendorAddress", @class = "form-control", @type = "text", required = "required" } })
                                        @Html.ValidationMessageFor(model => model.VendorAddress, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <!-- ./Text input-->
                            <div class="form-group">
                                <label class="col-md-4 control-label">Email <span class="text-danger">*</span></label>
                                <div class="col-md-6">
                                    <div class="input-field">
                                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { id = "Email", @class = "form-control", @type = "text", required = "required" } })
                                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <!-- ./Text input-->
                            <div class="form-group">
                                <label class="col-md-4 control-label">Phone Number <span class="text-danger">*</span></label>
                                <div class="col-md-6">
