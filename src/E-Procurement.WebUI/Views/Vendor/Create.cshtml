                                </tr>
                                <tr>
                                    <td>
                                        <div class="form-group">
                                            <div class="col-md-6" style="margin-top:10px">
                                                <label for="AatAmount">Select Categories:</label>

                                                @foreach (var category in Model.VendorCategoryList)
                                                {
                                                    <div class="form-horizontal" style="width:450px; height:20px; margin-top:5px">
                                                        <input type="checkbox" @Model.VendorCategoryList value="@category.Value" checked="checked" name="SelectedVendorCategories" id="@category.Value" />
                                                        <label for="@category.Text">@category.Text</label>
                                                        <input type="hidden" id="@category.Value" />
                                                    </div>

                                                }

                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="form-group">
                                            <div class="col-md-6" style="margin-top:10px">
                                                @*<label for="AatAmount">AAT Amount:</label>*@
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            </table>
                           
                            <br />
                            <!-- Button -->
                            <div class="form-group">
                                <label class="col-md-8 control-label"></label>
                                <div class="col-md-4">

                                    <button type="submit" class="btn btn-success"><span class="glyphicon glyphicon-send"></span>  Submit</button>
                                    @*</div>
                <label class="col-md-2 control-label"></label>
                <div class="col-md-2">*@
                                    <a href="@Url.Action("Index","Vendor")" class="btn btn-danger"><span class="glyphicon glyphicon-remove"></span> Back</a>
                                </div>

