                                                <label for="BankBranch">Branch:</label>
                                                @Html.EditorFor(model => model.BankBranch, new { htmlAttributes = new { id = "BankBranch", @class = "form-control", @type = "text", required = "required", style = "width:450px; height:40px" } })
                                                @Html.ValidationMessageFor(model => model.BankBranch, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <div class="form-group">
                                            <div class="col-md-6" style="margin-top:10px">
                                                <label for="AccountName">Account Name:</label>
                                                @Html.EditorFor(model => model.AccountName, new { htmlAttributes = new { id = "AccountName", @class = "form-control", @type = "text", required = "required", style = "width:450px; height:40px" } })
                                                @Html.ValidationMessageFor(model => model.AccountName, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="form-group">
                                            <div class="col-md-6" style="margin-top:10px">
                                                <label for="AccountNo">Account Number:</label>
                                                @Html.EditorFor(model => model.AccountNo, new { htmlAttributes = new { id = "AccountNo", @class = "form-control", @type = "text", required = "required", style = "width:450px; height:40px" } })
                                                @Html.ValidationMessageFor(model => model.AccountNo, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
