                                                <label for="SortCode">Sort Code:</label>
                                                @Html.EditorFor(model => model.SortCode, new { htmlAttributes = new { id = "SortCode", @class = "form-control", @type = "text", required = "required", style = "width:450px; height:40px" } })
                                                @Html.ValidationMessageFor(model => model.SortCode, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <div class="form-group">
                                            <div class="col-md-6" style="margin-top:10px">
                                                <label for="AatCurrency">AAT Currency:</label>
                                                @Html.EditorFor(model => model.AatCurrency, new { htmlAttributes = new { id = "AatCurrency", @class = "form-control", @type = "text", required = "required", style = "width:450px; height:40px" } })
                                                @Html.ValidationMessageFor(model => model.AatCurrency, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="form-group">
                                            <div class="col-md-6" style="margin-top:10px">
                                                <label for="AatAmount">AAT Amount:</label>
                                                @Html.EditorFor(model => model.AatAmount, new { htmlAttributes = new { id = "AatAmount", @class = "form-control", @type = "text", required = "required", style = "width:450px; height:40px" } })
                                                @Html.ValidationMessageFor(model => model.AatAmount, "", new { @class = "text-danger" })
                                            </div>
