                                                    <thead>
                                                        <tr>
                                                            <th></th>
                                                            <th>Items</th>
                                                            <th>Description</th>
                                                            <th>Quantity</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var item in Model.ItemList)
