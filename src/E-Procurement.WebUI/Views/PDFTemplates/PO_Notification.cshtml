
@model E_Procurement.Repository.Dtos.RFQGenerationModel
<html lang="en">
<head>
    <title>CyberSpace</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <style>
        .body{
            color: red;
        }
        .content {
            max-width: 1000px;
            margin: auto;
        }
    </style>
</head>



<body>
    <div class="card pd-20 pd-sm-40">
        <div>
            <div align="center">
                @*<img src="@Model.URL/img/cyb-logo.png" style="max-width:1200px; height:100px;">*@
                <img src="https://www.cyberspace.net.ng/wp-content/uploads/2019/04/cyberspace-white-2.png" style="max-width:600px; height:50px;">
            </div>

            <div class="content">
                <div class="col-sm-10">
                    <div class=row>
                        <div class="col-sm-3">
                            <br>
                            <p>@Model.CreatedDate.ToString("dd MMM yyyy")</p>
                            <br>
                            <p><b>The Managing Director</b></p>
                            <p><b> @Html.DisplayFor(model => model.VendorName)</b></p>
                            <p><b> @Html.DisplayFor(model => model.VendorAddress)</b></p>
                        </div>
                        <div class="col-sm">

                        </div>
                        <div class="col-sm-2">

                        </div>
                        <div class="col-sm-2">
                        </div>

                        <div class="col-sm-3">
                            <br>
                            <p><b>RFQ Ref: @Html.DisplayFor(model => model.Reference)</b></p>
                            <p><b>PO Ref: @Html.DisplayFor(model => model.PONumber)</b></p>

                        </div>

                    </div>
                </div>

                <div class="col-sm-12">
                    <p>Dear Sir,

                    <p><b>@Html.DisplayFor(model => model.POTitle)</b></p>
                    <p> Referencing your Quotation and our negotiation meeting with you, we are pleased to inform you that </p>
                    <p> your company has been selected to carry out the above mentioned under the following terms and conditions:</p>
                </div>



                <div class="col-sm-10">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <td>s/n </td>
                                <td> Item</td>
                                <td class="col-sm-4">Description </td>
                                <td> Qty</td>
                                <td>Unit Price ₦ </td>
                                <td>Amount ₦ </td>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int i = 0;
                            }
                            @{
                                //var RFQDetails = Model.RFQDetails as List<E_Procurement.WebUI.Models.RfqApprovalModel.RFQDetailsViewModel>;
                                var RFQDetails = Model.RFQDetails as List<E_Procurement.Repository.Dtos.RFQDetailsModel>;

                            }
                            @foreach (var approvalConfig in RFQDetails)
                            {
                                <tr>
                                    <td>@(i = i + 1)</td>
                                    <td>@approvalConfig.ItemName</td>
                                    <td>@approvalConfig.Description</td>
                                    <td>@approvalConfig.QuotedQuantity</td>
                                    <td align="right">@approvalConfig.QuotedPrice</td>
                                    <td align="right">@approvalConfig.QuotedAmount</td>
                                </tr>
                            }


                            <tr>
                                <td>Total</td>
                                <td colspan=3 align="right">  Total</td>
                                <td align="right"> ₦@Html.DisplayFor(model => model.TotalAmount)</td>
                            </tr>




                    </table>

                </div>

                <div>
                </div>

                <div class="col-sm-12">

                    <p>
                        <b>Cost:</b>      @Html.DisplayFor(model => model.POCost)
                    </p>

                    <p> Please Note that no Variation in price will be entertained after the acceptance of this offer Letter.</p>

                    <p>
                        <b> Delivery/Warranty:</b> @Html.DisplayFor(model => model.POWarranty)

                    </p>
                    <p>
                        <b>Terms of Payments: </b> @Html.DisplayFor(model => model.POTerms)


                    </p>

                    <p>
                        <b>Validity of Offer : </b> @Html.DisplayFor(model => model.POValidity)
                    </p>
                    <p>
                        If the above terms and conditions are acceptable to you, kindly acknowledge this letter by signing the enclosed copy and returning same to us.

                    <p>Thank You. </p>

                    <p>Yours faithfully,</p>
                    <p>For: <b>CYBERSPACE NETWORK LIMITED</b></p>
                </div>
                <BR>
                <div class="col-sm-12">
                    <div class=row>
                        <div class="col-sm-3">
                            <p><b>STANLEY ODUAH</b></p>
                            @*<p><img src="https://upload.wikimedia.org/wikipedia/commons/thumb/1/1e/Greg_Koch_%28signature%29.jpg/1200px-Greg_Koch_%28signature%29.jpg" style="max-width:100px; height:50px;"></p>*@
                            <p><img src="@Model.URL/Uploads/Signatures/@Model.Signature1" style="max-width:100px; height:50px;"></p>
                            <p>Authorized Signatory</p>
                        </div>
                        <div class="col-sm">

                        </div>
                        <div class="col-sm-2">

                        </div>
                        <div class="col-sm-2">

                        </div>
                        <div class="col-sm-3">
                            <p><b>JOE ONWUBUYA</b></p>
                            <p><img src="@Model.URL/Uploads/Signatures/@Model.Signature2" style="max-width:100px; height:50px;"></p>
                            @*<p><img src="https://upload.wikimedia.org/wikipedia/commons/thumb/1/1e/Greg_Koch_%28signature%29.jpg/1200px-Greg_Koch_%28signature%29.jpg" style="max-width:100px; height:50px;"></p>*@
                            <p>Authorized Signatory</p>
                        </div>


                        <div class="footer"></div>
                        <br>
                    </div>

                </div>
            </div>

        </div>


</div>

</body>
</html>

